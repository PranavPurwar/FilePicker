<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.FilePicker.Dialog" parent="ThemeOverlay.Material3Expressive.Dialog">
        <item name="filePickerBackgroundColor">?attr/colorSurfaceContainer</item>
        <item name="filePickerSurfaceColor">?attr/colorSurfaceContainerLowest</item>
    </style>

    <style name="Theme.FilePicker.Dialog" parent="Base.Theme.FilePicker.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?colorSurface</item>
        <item name="actionMenuTextColor">?colorAccent</item>

        <!-- Set status bar and navigation bar color to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
