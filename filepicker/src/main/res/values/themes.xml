<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FilePicker.Dialog" parent="ThemeOverlay.Material3Expressive.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?colorSurface</item>
        <item name="actionMenuTextColor">?colorAccent</item>

        <!-- Set status bar and navigation bar color to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">?attr/isLightTheme</item>
    </style>

    <style name="Widget.FilePicker.Toolbar" parent="Widget.Material3.Toolbar.OnSurface">
        <item name="titleTextAppearance">@style/TextAppearance.Material3.TitleLarge.Emphasized</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Material3.BodySmall</item>
    </style>
</resources>
